{
  "name": "motlow-learn-bridge",
  "private": true,
  "version": "1.0.0",
  "description": "Motlow's LearnBridge",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "pnpm clean && node esbuild.mjs",
    "start": "IS_LOCAL=true pm2-runtime dist/index.js",
    "dev:start": "pnpm build && IS_LOCAL=true node --enable-source-maps .",
    "dev": "nodemon --watch src -e ts,js --exec pnpm dev:start",
    "sls-deploy": "pnpm build && sls deploy",
    "sls-offline": "pnpm build && sls offline"
  },
  "author": "Learning Economy Foundation (www.learningeconomy.io)",
  "license": "MIT",
  "dependencies": {
    "@learncard/core": "^8.5.5",
    "@learncard/types": "^5.2.9",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "~4.16.1",
    "jwt-decode": "^3.1.2",
    "node-fetch": "^3.2.10",
    "pm2": "^5.2.2",
    "serverless-esbuild": "^1.25.0",
    "serverless-http": "^3.0.1",
    "serverless-plugin-warmup": "^8.1.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.106",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "esbuild": "^0.15.13",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "nodemon": "^2.0.16",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "serverless-plugin-typescript": "^2.1.0",
    "shx": "^0.3.4",
    "typescript": "^4.9.3"
  }
}
